    list-style: none;
    padding: 0;
  }
  
  li {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }
  
  ___________________________________external javScript
  
  let items = [];

function addItem() {
  const input = document.getElementById("input");
  const value = input.value.trim();
  if (value !== "") {
    items.push(value);
    input.value = "";
    renderList();
  }
}

function renderList() {
  const list = document.getElementById("list");
  list.innerHTML = "";
  items.forEach((item) => {
    const li = document.createElement("li");
    li.innerText = item;
    list.appendChild(li);
  });
}
